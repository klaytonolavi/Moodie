<div class="jumbotron">
   <h1> {{title}} </h1>
</div>
   
   <div class="container">
    <div id="main_area">
       
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12" id="slider-header">
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="sadness"><span class="sadness"></span>Sadness</button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="neutral"><span class="neutral"></span>Neutral</button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="disgust"><span class="disgust"></span>Disgust</button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="anger"><span class="anger"></span>Anger</button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="surprise"><span class="surprise"></span>Surprise</button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="fear"><span class="fear"></span>Fear</button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="happiness"><span class="happiness"></span>Happiness</button>
              </div>
            </div>
            
            </div>
        </div>
        <br><br><br>
        <!-- Slider -->
        <div class="row">
            <div class="col-sm-6" id="slider-thumbs">
                <!-- Bottom switcher of slider -->
                <ul class="hide-bullets">
                    {{#each photos}}
                        <li class="col-sm-3">
                            <a class="thumbnail" id="carousel-selector-{{@index}}"><img src="{{this.url}}"></a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-sm-6">
                <div class="col-xs-12" id="slider">
                    <!-- Top part of the slider -->
                    <div class="row">
                        <div class="col-sm-12" id="carousel-bounding-box">
                            <div class="carousel slide" id="myCarousel">
                                <!-- Carousel items -->
                                <div class="carousel-inner">
                                    {{#each photos}}
                                        <div class="active item" data-slide-number="{{@index}}">
                                            <img src="{{this.url}}"><span>{{this.score}}</span>
                                        </div>
                                    {{/each}}
                                </div>
                                <!-- Carousel nav -->
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br>